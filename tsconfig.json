{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
    }

  }
}